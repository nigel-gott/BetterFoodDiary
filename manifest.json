{
    "name": "Better Food Diary",
    "version": "0.0.0.1",
    "description": "Improves the myfitnesspal.com food diary.",
    "manifest_version": 2,
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "http://www.myfitnesspal.com/food/diary/*"
            ],
            "js": ["js/jquery.js", "js/bfd.js"]
        },
        {
            "matches": [
                "http://www.myfitnesspal.com/reports/printable_diary/?load"
            ],
            "all_frames": true,
            "js": ["js/jquery.js", "js/process_printable_diary.js"]
        },
        {
            "matches": [
                "http://www.myfitnesspal.com/reports/printable_diary/?send"
            ],
            "all_frames": true,
            "js": ["js/jquery.js", "js/send_bfd_printable_diary.js"]
        }
    ],
    "permissions": [
        "tabs",
        "unlimitedStorage",
        "storage"
    ]
}
