{
    "name": "Better Food Diary",
    "version": "0.0.0.1",
    "description": "Improves the myfitnesspal.com food diary.",
    "manifest_version": 2,
    "options_page": "options.html",
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://www.myfitnesspal.com/food/diary/*"
            ],
            "js": [
                "js/lib/underscore.js", 
                "js/lib/jquery.js", 
                "js/lib/backbone.js", 
                "js/lib/backbone-relational.js",
                "js/lib/backbone-indexeddb.js",
                "js/models.js", 
                "js/views.js", 
                "js/diary_parser.js", 
                "js/cs/food_diary.js"
                    ]
        },
        {
            "matches": [
                "http://www.myfitnesspal.com/reports/printable_diary/?load"
            ],
            "all_frames": true,
            "js": ["js/lib/jquery.js", "js/cs/load_printable_diary.js"]
        },
        {
            "matches": [
                "http://www.myfitnesspal.com/reports/printable_diary/?send"
            ],
            "all_frames": true,
            "js": ["js/lib/jquery.js", "js/models.js", "js/cs/send_printable_diary.js"]
        },
        {
            "matches": [
                "http://www.myfitnesspal.com/account/login"
            ],
            "all_frames": true,
            "js": ["js/cs/detect_not_logged_in.js"]
        }

    ],
    "permissions": [
        "tabs",
        "unlimitedStorage",
        "storage"
    ],
    "web_accessible_resources": [
        "images/wrench_icon.png",
        "images/tick_icon.png",
        "images/stats_icon.png"
    ]
}
